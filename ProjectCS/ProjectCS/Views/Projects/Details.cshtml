@using ProjectCS.Models
@model Project
<div class="col-xs-12 page-banner-box project-card">
    <img class="profile-bg col-xs-12" src="~/Content/images/jungle_adventure.png" alt="personal-background" />
    <div class="col-xs-12">
        <h1 class="inverted-txt">@Model.Title</h1>
        <div class="inverted-txt">
            @*           Bli med i prosjekt*@
            @*           Follow / Unfollow*@
            @Html.Partial("_FollowProject", new {project = @Model}) 
            @*           Like follow*@

            <p>Number of followers: @Model.Followers.Count</p>
        </div>
    </div>
    <div class="icon-box row">
        <div class="collab col-xs-6 nopadding">
            <img src="~/Content/images/user.png" alt="Something" />
            <label class="col-xs-12 nopadding">@Model.Followers.Count</label>
        </div>
        <div class="like col-xs-6 nopadding">
            <img src="~/Content/images/hearts.png" alt="Something" />
            <label class="col-xs-12 nopadding">@Model.Likes.Count</label>
        </div>
    </div>
    <div class="follow">
    </div>
</div>



<div id="main-box" class="gray-bg col-xs-12">
    <div class="title-line col-xs-12 nopadding">
        <h3 class="inverted-txt">Total progresjon</h3>
    </div>

    <div class="box col-xs-12">
        <p id="createdBy">Prosjekteier: <a href="#">Fredric</a></p>
        <p id="contributors">
            @*            Collaborators: @foreach (var contributor in Model.ContributorNames)*@
            @*            {*@
            @*                <a href="#">@contributor.</a>*@
            @*            }*@
        </p>


        <div class="progress-module col-xs-12 nopadding">

            <div class="progress">
                <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                    60%
                </div>
            </div>
            <div id="btn-box" class="row">
                <div class="left-btn-group col-xs-10">
                    <h4 class="inverted-txt nomargin">Ferdige kapitler: </h4>
                    <button class="done" alt="Ferdig!">Intro</button>
                    <button class="done">C1</button>
                    <button class="done">C2</button>
                    <button class="done">C3</button>
                    <button>C4</button>
                    <button>C5</button>
                    <button>C6</button>
                    <button>C7</button>
                </div>
                <div class="col-xs-2">
                    <div class="right-btn-group">
                        <h4 class="inverted-txt nomargin">Språk: </h4>
                        <button class="done">no</button><button>en</button>
                    </div>


                </div>
            </div>
        </div>
        <!--<p id="Languages">Languages: <b>@Model.Language</b></p>-->
    </div>
    <div class="story-box box col-xs-12 col-md-9">
        <div class="title-line-pink col-xs-12 nopadding">
            <h2 class="inverted-txt-pink">Konseptet</h2>
        </div>

        <p id="mainConsept">
            @Model.Description
        </p>
        <img id="cover_image" src="@Model.CoverUrlSmall" alt="Cover" width="600" height="600" />
    </div>
    <div id="updateBox">

    </div>

    @*    @if (Model.IsContributor)*@
    @*    {*@
    @*        <div class="box">@Html.ActionLink("Manage Issues", "Index", "Issue", new { sId = Model.Project.Id }, null)</div>*@
    @*    }*@

    <section class="comment-section box col-xs-12">
        <div class="title-line-pink col-xs-12 nopadding">
            <h3 class="inverted-txt-pink">Kommentarer</h3>
        </div>

        <a class="inverted-txt-gray nomargin" href="#">Legg igjen en kommentar!</a>


        <div id="comment-id" class="comment-container box col-xs-12">
            <div class="col-xs-1 comment-img">
                <img class="img-responsive" alt="profile picture" />
            </div>

            <div class="comment-box box gray-bg col-xs-11 nomargin">
                <div class="title-line col-xs-12 nopadding">
                    <div class="col-xs-9 nopadding">
                        <h4 class="inverted-txt nomargin"><a href="#"><b>Fredric</b></a> sier:</h4>
                    </div>

                    <p class="timestamp col-xs-3 nomargin">Postet: <b>15.05.2015 kl 19:34</b></p>
                </div>

                <div class="comment-area col-xs-12">Kult prosjekt! Digger det!</div>
            </div>
        </div>
    </section>

</div>


<div id="pledgeBox">
</div>